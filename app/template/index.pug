extends partials/layout

block append config
    - var bodyClass = 'Body'
    - var pageTitle = 'CryptoBot'
    - var NavTabs = ['Подьем в %','Отклонение в %','История','Настройки']

//- append prepend each item in items mixin product(pars) +product(Pars)

block header
    //-include partials/header-mobile
    include partials/header

block main
    main.Main
        .container.pt-4
            .row.justify-content-center

                .col-sm-4
                    .row
                        #pills-tab.nav.nav-pills.mb-3.col-12(role="tablist")
                            each val,i in NavTabs
                                .NavEl.col-12.btn.btn-outline-dark.rounded-0.text-left(id='tab' + i, data-toggle="pill", href="#pill" + i, role="tab", aria-controls="pill" + i)
                                    |#{val}


                .col-sm-8

                    #pills-tabContent.tab-content
                        each val,i in NavTabs
                            .tab-pane.fade(id='pill'+i role="tabpanel" aria-labelledby="tab"+i)

                                .row
                                    .col-12
                                        .w-100.btn.btn-outline-dark.rounded-0.mb-2.shadow
                                            |Создать бота

                                .row.rounded-0.pt-2.pb-2

                                    each val,n in ['BTC/LTC','ETH/BTC','LTC/USD']

                                        .Bot.col-12.d-flex.mb-2.flex-wrap

                                            .toggleRoll.btn.btn-outline-dark.rounded-0.w-100.text-left.d-flex.align-items-center.justify-content-between
                                                | #{val}

                                                label.switch(for="checkbox"+i+n)
                                                    input(id='checkbox'+i+n type="checkbox")
                                                    .slider.round

                                            .Roll.border.border-top-0.border-dark.w-100
                                                .col-12.mb-2
                                                    .row.pt-2.pb-2
                                                        .col-6
                                                            .btn-group.dropright.w-100
                                                                .btn.btn-outline-dark.rounded-0.w-100 Выбор пары
                                                                .btn.btn-outline-dark.rounded-0.dropdown-toggle.dropdown-toggle-split(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                                                                    span.sr-only Toggle Dropdown
                                                                .dropdown-menu.rounded-0
                                                                    each val in ['BNB/USDT','NEO/USDT','AMB/BTC','AMB/BTC','AMB/BTC','AMB/BTC','AMB/BTC']
                                                                        a.dropdown-item(href="#") #{val}

                                                        .col-12.pb-2.pt-2
                                                            | Значение подъема в %
                                                        .col-12.mb-4
                                                            .row
                                                                each val in ['1%','2%','3%','4%']
                                                                    .col
                                                                        .w-100.btn.btn-outline-dark.rounded-0.shadow
                                                                            | #{val}




